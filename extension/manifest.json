{
  "manifest_version": 3,
  "name": "History Logger",
  "version": "1.0",
  "description": "Logs visited URLs and sends to Firebase",
  "permissions": [
    "tabs",
    "history",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Logger"
  },
  "icons": {
    "16": "images/icon16.jpg",
    "48": "images/icon48.jpg",
    "128": "images/icon128.jpg"
  }
}
